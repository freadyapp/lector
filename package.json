{
	"name": "lectorjs",
	"version": "0.3.1b",
	"description": "Read like you're on aderall",
	"license": "MIT",
	"repository": "robo-monk/lector",
	"source": "src/index.js",
	"main": "dist/lector.cjs.js",
	"module": "dist/lector.esm.js",
	"browser": "dist/lector.umd.js",
	"files": [
		"dist/"
	],
	"keywords": [
		"lector",
		"npm",
		"package",
		"fready"
	],
	"devDependencies": {
		"@babel/core": "^7.12.3",
		"@babel/preset-env": "^7.12.1",
		"@rollup/plugin-commonjs": "^17.0.0",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^11.0.1",
		"@types/jquery": "^3.5.4",
		"babel-jest": "^26.6.3",
		"babelify": "^10.0.0",
		"browserify-css": "^0.15.0",
		"css-loader": "^5.0.1",
		"eslint": "^7.19.0",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^26.6.3",
		"nodemon": "^2.0.7",
		"rollup": "^2.36.1",
		"rollup-plugin-execute": "^1.1.1",
		"rollup-plugin-sizes": "^1.0.3",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-visualizer": "^4.2.0",
		"style-loader": "^2.0.0",
		"tailwindcss": "^1.9.6",
		"webpack": "^5.11.0",
		"webpack-cli": "^4.2.0"
	},
	"scripts": {
		"build": "rollup -c",
		"pretest": "yarn build",
		"test": "jest",
		"test:watch": "jest --watchAll",
		"dev-style": "nodemon -w 'src/styles/**' -e css,scss --exec python3 sass",
		"dev": "nodemon -w 'src/' -e css,scss,js --exec python3 watchtower",
		"dev-rollup": "rollup -c -w",
		"lint": "yarn run eslint src",
		"watch": "watchify docs/demo.js -t babelify -o docs/bundle.js -v"
	},
	"directories": {
		"doc": "docs",
		"test": "test"
	},
	"dependencies": {
		"animejs": "^3.2.1",
		"compromise": "^13.7.0",
		"mousetrap": "^1.6.5",
		"pragmajs": "latest"
	},
	"browserify": {
		"transform": [
			"browserify-css"
		]
	},
	"jest": {
		"setupFiles": [
			"<rootDir>/tests/test_env.js"
		]
	}
}
